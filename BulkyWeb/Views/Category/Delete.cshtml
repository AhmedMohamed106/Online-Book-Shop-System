@model Category

<h2>Confirm Delete</h2>

<p>Are you sure you want to delete the category: @Model.Name?</p>

@using (Html.BeginForm("Delete", "Category", new { Id = Model.Id }, FormMethod.Post))
{
        <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary" style="background-color: #CCCCCC;">Cancel</a>
}




