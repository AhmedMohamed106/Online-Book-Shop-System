@model Bulky.Models.Models.Category
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Update Category</h2>

            </div>
        </div>

    </div>
    <div class="card-body p-4">
        
  
    <form asp-controller="Category" asp-action="Edit" method="post">
        <div as="form-group" class="border p-3 mt-4">
                    @*<div asp-validation-summary="All"></div>*@
            <div class="row p-1">
            <label  asp-for="Name" for="name" class="control-label p-0"></label>
            <input asp-for="Name"  id="name" class="form-control"    />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div >
            <div class="row p-1">
            <label asp-for="DisplayOrder" for="order" class="control-label p-0"></label>
            <input asp-for="DisplayOrder" id="order" class="form-control"   />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

           </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary" style="width:150px; margin-top:15px">Update</button>
            <a href="@Url.Action("Index", "Category")" class="btn btn-secondary border form-control" style="width:200px; margin-top:15px; margin-left:30px; color:black">Back to List</a>
        </div>
    </form>


            @*the script code for injecting partial vaidation view for the main view to 
        validate in the client side
    *@
            @section Scripts{

                @{
                                            <partial name="_ValidationScriptsPartial"/>
                }

    }

</div>
<div/>


