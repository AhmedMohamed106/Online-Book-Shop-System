@model List<Bulky.Models.Models.Category>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Category List</h2>

            </div>
        </div>

    </div>
    <div class="card-body p-4">


           <div class="container">
               <div class="row pt-2 pb-4">
                   
                   <div class="col-2 text-end">
                       <a asp-controller="Category" asp-action="Create" class="btn btn-primary" style="width:200px;">
                          <i class="bi bi-plus-circle"></i> Create New Category 
                       </a>
                   </div>
               </div>

               <table class="table table-bordered table-striped">
                   <thead>
                   <tr>

                       <th>
                           Category Name
                       </th>
                       <th>
                           Display Order
                       </th>
                       <th></th>
                   </tr>
                   </thead>
                   <tbody>
                    @foreach (var obj in Model.OrderBy(p => p.Name))
                    {
                           <tr>
                               <td> @obj.Name </td>
                               <td> @obj.DisplayOrder</td>
                               <td>
                                   <div class="w-75 btn-group" role="group">
                                    @*  asp-route-categoryid="@obj.Id" *@
                                             <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style=" background-color: #1F75CB;color: white;">
                                        <i class="bi bi-pencil-square"></i> Edit
                                     </a>
                                              <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2" style="margin-right:50px">
                                                <i class="bi bi-trash3"></i> Delete
                                         </a>
                                   </div>

                               </td>
                           </tr>
                    }

                   </tbody>

               </table>
           </div>


        </div>
