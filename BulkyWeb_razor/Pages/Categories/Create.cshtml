@page
@model BulkyWeb_razor.Pages.Categories.CreateModel

<div class="container">
    <h2>Create New Category</h2>

    <form asp-page="Categories/Create" method="post">
        <div as="form-group" class="border p-3 mt-4">
            @*<div asp-validation-summary="All"></div>*@
            <div class="row p-1">
            <label  asp-for="category.Name" for="name" class="control-label p-0"></label>
            <input asp-for="category.Name"  id="name" class="form-control"   required />
            <span asp-validation-for="category.Name" class="text-danger"></span>
        </div >
            <div class="row p-1">
            <label asp-for="category.DisplayOrder" for="order" class="control-label p-0"></label>
            <input asp-for="category.DisplayOrder" id="order" class="form-control"  required />
            <span asp-validation-for="category.DisplayOrder" class="text-danger"></span>

           </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary" style="width:150px; margin-top:15px">Create</button>
            <a asp-page="/Categories/Index" class="btn btn-secondary border form-control" style="width:200px; margin-top:15px; margin-left:30px;">Back to List</a>
        </div>
    </form>


    @*the script code for injecting partial vaidation view for the main view to 
        validate in the client side
    *@
    @section Scripts{
    
        @{
            <partial name="_ValidationScriptsPartial"/>
        }

    }
</div>
